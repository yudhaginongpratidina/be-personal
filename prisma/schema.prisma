generator client {
    provider = "prisma-client-js"
    // output   = "../generated/prisma"
}

datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
}

model User {
    id            String   @id @default(uuid())
    name          String
    email         String   @unique
    hash_password String
    createdAt     DateTime @default(now())
    updatedAt     DateTime @updatedAt

    @@map("users")
}
